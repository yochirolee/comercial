{
  "name": "zas-backend",
  "version": "1.0.0",
  "description": "Sistema de gesti√≥n de ofertas y facturas",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "local:setup": "cp prisma/schema.local.prisma prisma/schema.prisma && prisma generate && prisma db push",
    "local:seed": "tsx prisma/seed.local.ts",
    "local:reset": "rm -f prisma/dev.db && npm run local:setup && npm run local:seed",
    "local:dev": "cp prisma/schema.local.prisma prisma/schema.prisma && prisma generate && tsx watch src/index.ts",
    "prod:restore": "cp prisma/schema.prod.prisma prisma/schema.prisma && prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.0",
    "@types/pdfkit": "^0.13.4",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "pdfkit": "^0.15.0",
    "prisma": "^5.10.0",
    "resend": "^6.7.0",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "tsx": "^4.7.0"
  }
}
